// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  ip        String?
  token     String?  @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  role      String   @default("basic")

  @@map("users")
}

model Orphan {
  id        String   @id @default(uuid())
  firstname String
  lastname  String
  birthDate DateTime
  country   String
  gender    String
  score     Int

  eyes         String
  hairs        String
  weight       Int
  height       Float
  beauty       Int
  intelligence Int
  sociability  Int
  calm         Int

  @@map("orphans")
}
